<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />

    <!-- Setup Robot structure -->
    <link name="base_link"></link>
    
    <!-- ROBOT CHASSIS -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 -0.0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.3048 0.127 0.1524"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            <geometry>
                <box size="0.3048 0.127 0.14605"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3048" y="0.127" z="0.1524">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT FRONT WHEEL -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.0762 -0.0889 -0.060325" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.0508" radius="0.03175" />/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.0508" radius="0.03175" />/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.0508" radius="0.03175">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>   

    <!-- RIGHT FRONT WHEEL -->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="-0.0762 -0.0889 -0.060325" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.0508" radius="0.03175" />/>
            </geometry>
            <material name="black"/>
        </visual>
         <collision>
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.0508" radius="0.03175" />/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.0508" radius="0.03175">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- LEFT BACK WHEEL --> 
    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.0762 0.0889 -0.060325" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.0508" radius="0.03175" />/>
            </geometry>
            <material name="black"/>
        </visual>
         <collision>
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.0508" radius="0.03175" />/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.0508" radius="0.03175">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>  


    <!-- RIGHT BACK WHEEL -->
    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="0.0762 0.0889 -0.060325" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.0508" radius="0.03175" />/>
            </geometry>
            <material name="black"/>
        </visual>
         <collision>
            <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.0508" radius="0.03175" />/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.0508" radius="0.03175">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>  

    <!-- Setup colors -->
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <gazebo reference="chassis">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="rear_left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="rear_right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>
